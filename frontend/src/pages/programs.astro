---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { getPrograms } from '@/api'; // Import the getPrograms function
import type { Programs } from '@/api';

let programs: Programs[] = [];
let fetchError: string | null = null;

try {
  // Fetching programs from the API
  programs = await getPrograms();
} catch (error: unknown) {
  let message = 'Unknown error';
  if (error instanceof Error) {
    message = error.message;
  }
  fetchError = `Error fetching programs: ${message}`;
}
---

<Layout title="Our Programs" description="Discover CBO NGO's comprehensive programs including scholarships, workshops, mentorship, and community development projects.">
  <Header />
  
  <!-- Hero Section -->
  <section class="relative py-20 bg-gradient-to-r from-secondary-600 to-primary-600 text-white overflow-hidden">
    <div class="absolute inset-0 bg-black opacity-20"></div>
    <div class="container mx-auto px-4 relative z-10">
      <div class="max-w-3xl mx-auto text-center animate-fade-in">
        <h1 class="text-4xl md:text-6xl font-bold mb-6">Our Programs</h1>
        <p class="text-xl md:text-2xl text-gray-200 leading-relaxed">
          Comprehensive initiatives designed to empower individuals and strengthen communities through education, skill development, and sustainable projects.
        </p>
      </div>
    </div>
  </section>

  <!-- Scholarships Program -->
  <section id="scholarships" class="py-16 bg-white">
    <div class="container mx-auto px-4">
      <div class="max-w-6xl mx-auto">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
          <div class="animate-on-scroll">
            <div class="flex items-center mb-6">
              <div class="w-16 h-16 bg-primary-500 rounded-full flex items-center justify-center mr-4">
                <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 14l9-5-9-5-9 5 9 5z"/>
                  <path d="M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z"/>
                </svg>
              </div>
              <h2 class="text-3xl md:text-4xl font-bold text-gray-900">Scholarship Program</h2>
            </div>
            <p class="text-xl text-gray-600 mb-6 leading-relaxed">
              Our flagship program provides comprehensive financial support to deserving students, 
              ensuring that financial constraints never become barriers to educational achievement.
            </p>
            
            <div class="space-y-4 mb-8">
              <div class="flex items-start space-x-3">
                <svg class="w-6 h-6 text-primary-500 mt-1" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                <div>
                  <h4 class="font-semibold text-gray-900">Full Tuition Coverage</h4>
                  <p class="text-gray-600">Complete financial support for school fees and educational expenses</p>
                </div>
              </div>
              <div class="flex items-start space-x-3">
                <svg class="w-6 h-6 text-primary-500 mt-1" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                <div>
                  <h4 class="font-semibold text-gray-900">Essential Materials</h4>
                  <p class="text-gray-600">Books, uniforms, and other necessary educational materials</p>
                </div>
              </div>
              <div class="flex items-start space-x-3">
                <svg class="w-6 h-6 text-primary-500 mt-1" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                <div>
                  <h4 class="font-semibold text-gray-900">Mentorship Support</h4>
                  <p class="text-gray-600">Ongoing guidance and academic support throughout their studies</p>
                </div>
              </div>
            </div>

            <div class="flex flex-col sm:flex-row gap-4">
              <a 
                href="/get-involved#donate" 
                class="bg-primary-500 hover:bg-primary-600 text-white px-8 py-3 rounded-full font-semibold transition-all duration-300 hover:scale-105 text-center"
              >
                Support a Student
              </a>
              <a 
                href="/contact" 
                class="bg-transparent border-2 border-primary-500 text-primary-500 hover:bg-primary-500 hover:text-white px-8 py-3 rounded-full font-semibold transition-all duration-300 text-center"
              >
                Apply for Scholarship
              </a>
            </div>
          </div>
          
          <div class="animate-on-scroll">
            <img 
              src="https://images.pexels.com/photos/1181346/pexels-photo-1181346.jpeg?auto=compress&cs=tinysrgb&w=600&h=400&fit=crop"
              alt="Students studying with scholarship support"
              class="w-full rounded-xl shadow-lg"
            />
          </div>
        </div>

        <!-- Success Metrics -->
        <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mt-12">
          <div class="text-center p-6 bg-primary-50 rounded-xl animate-on-scroll">
            <div class="text-3xl font-bold text-primary-600 mb-2">500+</div>
            <p class="text-gray-700 font-medium">Students Supported</p>
          </div>
          <div class="text-center p-6 bg-primary-50 rounded-xl animate-on-scroll">
            <div class="text-3xl font-bold text-primary-600 mb-2">95%</div>
            <p class="text-gray-700 font-medium">Graduation Rate</p>
          </div>
          <div class="text-center p-6 bg-primary-50 rounded-xl animate-on-scroll">
            <div class="text-3xl font-bold text-primary-600 mb-2">15</div>
            <p class="text-gray-700 font-medium">Schools Partnered</p>
          </div>
          <div class="text-center p-6 bg-primary-50 rounded-xl animate-on-scroll">
            <div class="text-3xl font-bold text-primary-600 mb-2">8</div>
            <p class="text-gray-700 font-medium">Years Running</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Workshops Program -->
  <section id="workshops" class="py-16 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="max-w-6xl mx-auto">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
          <div class="order-2 lg:order-1 animate-on-scroll">
            <img 
              src="https://images.pexels.com/photos/1181263/pexels-photo-1181263.jpeg?auto=compress&cs=tinysrgb&w=600&h=400&fit=crop"
              alt="Workshop training session in progress"
              class="w-full rounded-xl shadow-lg"
            />
          </div>
          
          <div class="order-1 lg:order-2 animate-on-scroll">
            <div class="flex items-center mb-6">
              <div class="w-16 h-16 bg-secondary-500 rounded-full flex items-center justify-center mr-4">
                <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
                </svg>
              </div>
              <h2 class="text-3xl md:text-4xl font-bold text-gray-900">Workshops & Mentorship</h2>
            </div>
            <p class="text-xl text-gray-600 mb-6 leading-relaxed">
              Comprehensive skill-building programs that equip individuals with practical knowledge, 
              life skills, and professional capabilities for personal and career growth.
            </p>
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-8">
              <div class="bg-white p-4 rounded-lg shadow-sm">
                <h4 class="font-semibold text-gray-900 mb-2">Life Skills Training</h4>
                <p class="text-gray-600 text-sm">Financial literacy, communication, and leadership development</p>
              </div>
              <div class="bg-white p-4 rounded-lg shadow-sm">
                <h4 class="font-semibold text-gray-900 mb-2">Digital Literacy</h4>
                <p class="text-gray-600 text-sm">Computer skills, internet safety, and digital communication</p>
              </div>
              <div class="bg-white p-4 rounded-lg shadow-sm">
                <h4 class="font-semibold text-gray-900 mb-2">Career Guidance</h4>
                <p class="text-gray-600 text-sm">Professional development and job market preparation</p>
              </div>
              <div class="bg-white p-4 rounded-lg shadow-sm">
                <h4 class="font-semibold text-gray-900 mb-2">Entrepreneurship</h4>
                <p class="text-gray-600 text-sm">Business planning, startup basics, and market analysis</p>
              </div>
            </div>

            <div class="flex flex-col sm:flex-row gap-4">
              <a 
                href="/get-involved#volunteer" 
                class="bg-secondary-500 hover:bg-secondary-600 text-white px-8 py-3 rounded-full font-semibold transition-all duration-300 hover:scale-105 text-center"
              >
                Become a Mentor
              </a>
              <a 
                href="/contact" 
                class="bg-transparent border-2 border-secondary-500 text-secondary-500 hover:bg-secondary-500 hover:text-white px-8 py-3 rounded-full font-semibold transition-all duration-300 text-center"
              >
                Join a Workshop
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Community Projects -->
  <section id="community" class="py-16 bg-white">
    <div class="container mx-auto px-4">
      <div class="max-w-6xl mx-auto">
        <div class="text-center mb-12 animate-on-scroll">
          <div class="w-16 h-16 bg-success-500 rounded-full flex items-center justify-center mx-auto mb-6">
            <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 24 24">
              <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"/>
              <circle cx="9" cy="7" r="4"/>
              <path d="M23 21v-2a4 4 0 0 0-3-3.87"/>
              <path d="M16 3.13a4 4 0 0 1 0 7.75"/>
            </svg>
          </div>
          <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">Community Projects</h2>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto leading-relaxed">
            Sustainable development initiatives that address environmental concerns, 
            improve agricultural practices, and strengthen community resilience.
          </p>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-12">
          <!-- Organic Manure Initiative -->
          <div class="bg-success-50 rounded-xl p-8 animate-on-scroll">
            <div class="flex items-center mb-6">
              <div class="w-12 h-12 bg-success-500 rounded-full flex items-center justify-center mr-4">
                <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                </svg>
              </div>
              <h3 class="text-2xl font-bold text-gray-900">Organic Manure Initiative</h3>
            </div>
            <div class="mb-6">
              <img 
                src="https://images.pexels.com/photos/4101187/pexels-photo-4101187.jpeg?auto=compress&cs=tinysrgb&w=600&h=300&fit=crop"
                alt="Organic farming and manure production"
                class="w-full h-48 object-cover rounded-lg"
              />
            </div>
            <p class="text-gray-700 leading-relaxed mb-4">
              Our organic manure project teaches local farmers sustainable farming practices 
              while providing high-quality organic fertilizer. This initiative improves crop yields, 
              reduces environmental impact, and creates additional income streams for farming families.
            </p>
            <div class="space-y-2">
              <div class="flex items-center space-x-2">
                <svg class="w-5 h-5 text-success-600" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                <span class="text-gray-700">50+ farmers trained in organic practices</span>
              </div>
              <div class="flex items-center space-x-2">
                <svg class="w-5 h-5 text-success-600" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                <span class="text-gray-700">2000+ tons of organic manure produced</span>
              </div>
              <div class="flex items-center space-x-2">
                <svg class="w-5 h-5 text-success-600" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                <span class="text-gray-700">30% average increase in crop yields</span>
              </div>
            </div>
          </div>

          <!-- Seedling Distribution -->
          <div class="bg-primary-50 rounded-xl p-8 animate-on-scroll">
            <div class="flex items-center mb-6">
              <div class="w-12 h-12 bg-primary-500 rounded-full flex items-center justify-center mr-4">
                <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5"/>
                </svg>
              </div>
              <h3 class="text-2xl font-bold text-gray-900">Seedling Distribution</h3>
            </div>
            <div class="mb-6">
              <img 
                src="https://images.pexels.com/photos/1072824/pexels-photo-1072824.jpeg?auto=compress&cs=tinysrgb&w=600&h=300&fit=crop"
                alt="Tree seedlings ready for planting"
                class="w-full h-48 object-cover rounded-lg"
              />
            </div>
            <p class="text-gray-700 leading-relaxed mb-4">
              Our seedling distribution program focuses on reforestation and environmental conservation. 
              We provide fruit tree seedlings, indigenous trees, and medicinal plants to communities, 
              promoting biodiversity and environmental stewardship.
            </p>
            <div class="space-y-2">
              <div class="flex items-center space-x-2">
                <svg class="w-5 h-5 text-primary-600" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                <span class="text-gray-700">10,000+ seedlings distributed</span>
              </div>
              <div class="flex items-center space-x-2">
                <svg class="w-5 h-5 text-primary-600" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                <span class="text-gray-700">85% survival rate of planted trees</span>
              </div>
              <div class="flex items-center space-x-2">
                <svg class="w-5 h-5 text-primary-600" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                <span class="text-gray-700">5 communities actively participating</span>
              </div>
            </div>
          </div>
        </div>

        <!-- Call to Action -->
        <div class="text-center animate-on-scroll">
          <h3 class="text-2xl font-bold text-gray-900 mb-4">Ready to Support Our Programs?</h3>
          <p class="text-lg text-gray-600 mb-8 max-w-2xl mx-auto">
            Your support helps us expand these vital programs and reach more communities in need.
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a 
              href="/get-involved#donate" 
              class="bg-primary-500 hover:bg-primary-600 text-white px-8 py-4 rounded-full text-lg font-semibold transition-all duration-300 hover:scale-105 shadow-lg"
            >
              Support Our Programs
            </a>
            <a 
              href="/project-locations" 
              class="bg-transparent border-2 border-primary-500 text-primary-500 hover:bg-primary-500 hover:text-white px-8 py-4 rounded-full text-lg font-semibold transition-all duration-300"
            >
              View Project Locations
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <Footer />
</Layout>