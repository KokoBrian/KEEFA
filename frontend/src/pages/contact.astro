  ---
  import Layout from '../layouts/Layout.astro';
  import Header from '../components/Header.astro';
  import Footer from '../components/Footer.astro';
  import ContactForm from '../scripts/Contact';
  import { 
    submitContactInquiry, 
    fetchOfficeLocations, 
    fetchContactPersons, 
    fetchSocialMedia,
    fetchContactPageData,
    fetchFooterSocialMedia
  } from '@/api';

  import type { ContactPageData, OfficeLocation, ContactPerson, ContactInquiryPayload, ContactInquiryResponse } from '@/api';

  const { office: propOffice } = Astro.props;

  let contactData: ContactPageData | null = null;
  let office: OfficeLocation | null = null;
  let person: ContactPerson | null = null;
  let fetchError: string | null = null;

  try {
    contactData = await fetchContactPageData();

    if (!contactData) {
      fetchError = 'Failed to load contact data.';
    } else {
      office = contactData.office_locations?.[0] ?? null;
      person = contactData.contact_persons?.[0] ?? null;

      console.log('Fetched office:', office);
      console.log('Fetched contact person:', person);
    }
  } catch (error: unknown) {
    let message = 'Unknown error';
    if (error instanceof Error) {
      message = error.message;
    }
    fetchError = `Error fetching contact data: ${message}`;
  }
